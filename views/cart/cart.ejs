<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<div class="container p-4">
  <div class="row">
      <div class="col-lg-12 p-3 bg-white rounded shadow-sm mb-5">
          <!-- Shopping cart table -->
          <div class="table-responsive">
              <table class="table">
                  <thead>
                      <tr>
                          <th scope="col" class="border-0 bg-light">
                              <div class="p-2 px-3 text-uppercase">Product</div>
                          </th>
                          <th scope="col" class="border-0 bg-light">
                              <div class="py-2 text-uppercase">Price</div>
                          </th>
                          <th scope="col" class="border-0 bg-light">
                              <div class="py-2 text-uppercase">Remove</div>
                          </th>
                      </tr>
                  </thead>
                  <tbody>
                      <!-- Loop through user's cart -->
                      <% for (let product of user.cart) { %>
                          <tr>
                              <th scope="row" class="border-0">
                                  <img src="<%= product.img %>" alt="" width="70" class="img-fluid rounded shadow-sm">
                                  <div class="ml-3 d-inline-block align-middle">
                                      <h6 class="mb-0">
                                          <a href="#" class="text-dark d-inline-block align-middle p-1">
                                              <%= product.name %>
                                          </a>
                                      </h6>
                                  </div>
                              </th>
                              <td class="border-0 align-middle">
                                  <h6>Rs. <%= product.price %></h6>
                              </td>
                              <!-- Remove button (optional) -->
                              <!-- Uncomment this part if you want a remove feature -->
                              
                              <td class="border-0 align-middle">
                                  <form action="/user/<%= user._id %>?_method=DELETE&cartid=<%= product._id %>" method="POST">
                                      <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                  </form>
                              </td>
                             
                          </tr>
                      <% } %>
                  </tbody>
              </table>
          </div>
          <!-- End -->
      </div>
  </div>
</div>
<%- include('../partials/footer') %>
